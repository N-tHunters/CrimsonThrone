#ifndef ITEM_H
#define ITEM_H

#include <string>

class Actor;
class Saver;

class Item {
private:
  std::string name;

public:
  Item(std::string);
  Item();
  
  std::string GetName();
  void SetName(std::string);

  virtual bool IsUsable();
  virtual bool IsWearable();
  virtual bool IsStackable();

  virtual void Wear(Actor *);
  virtual void Use(Actor *);

  virtual void Save(Saver *);
};

#endif
  
